html,
body,
div,
span,
applet,
object,
iframe,
h1,
h2,
h3,
h4,
h5,
h6,
p,
blockquote,
pre,
a,
abbr,
acronym,
address,
big,
cite,
code,
del,
dfn,
em,
img,
ins,
kbd,
q,
s,
samp,
small,
strike,
strong,
sub,
sup,
tt,
var,
b,
u,
i,
center,
dl,
dt,
dd,
ol,
ul,
li,
fieldset,
form,
label,
legend,
table,
caption,
tbody,
tfoot,
thead,
tr,
th,
td,
article,
aside,
canvas,
details,
embed,
figure,
figcaption,
footer,
header,
hgroup,
menu,
nav,
output,
ruby,
section,
summary,
time,
mark,
audio,
video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section {
  display: block;
}
body {
  line-height: 1;
}
ol,
ul {
  list-style: none;
}
blockquote,
q {
  quotes: none;
}
blockquote:before,
blockquote:after,
q:before,
q:after {
  content: "";
  content: none;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}

// START OF GENERAL STYLING
a {
  cursor: pointer;
  text-decoration: none;
  color: black;
}

::selection {
  background-color: black;
  color: white;
}

button {
  font: inherit;
  cursor: pointer;
}

button,
input,
option,
textarea {
  margin: 0;
  padding: 0;
  background-color: transparent;
  border: none;
  appearance: none;
  box-shadow: none;
  outline: none;
}

img,
picture,
svg {
  max-width: 100%;
  vertical-align: middle;
}

// END OF GENERAL STYLING
// START OF VARIABLES

@font-face {
  font-family: "HelveticaNeueLTPro";
  src: url("{{ 'HelveticaNeueLTPro-Bd.woff2' | asset_url }}") format("woff2");
}

@mixin phone {
  @media (max-width: 599px) {
    @content;
  }
}

@mixin tablet {
  @media (max-width: 900px) {
    @content;
  }
}

@mixin phone {
  @media (max-width: 1200px) {
    @content;
  }
}
// END OF VARIABLES
// START OF PRESETS
.container,
.footer,
.header {
  padding: 0 25px;
}

*,
::before,
::after {
  box-sizing: border-box;
}

body {
  font-weight: 700;
  font-size: 16px;
  line-height: 1.25;
  font-family: "HelveticaNeueLTProBold", Arial, Helvetica, sans-serif;
  -webkit-font-smoothing: antialiased;
}

main {
  padding-top: 72px;
  @include phone {
    padding-top: 0;
  }
}

.flex {
  display: flex;
}

.space-between {
  justify-content: space-between;
}

.column {
  flex-direction: column;
}

.half {
  width: 50%;
}

.section {
  padding: 25px;
}

.heading {
  font-size: 30px;
}

.text-center {
  text-align: center;
}

.padding-top {
  padding-top: 25px;
}

// END OF PRESETS
// START OF HEADER
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: white;
  z-index: 10;

  @include phone {
    position: static;
  }
}

.header-inner {
  height: 72px;
  align-items: center;
  border-bottom: 1px solid;
  @include phone {
    display: none;
  }
}

.header-title {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  font-size: 24px;
}

// ---Mobile Menu---
.header-mobile {
  display: none;
  height: 72px;
  border-bottom: 1px solid black;

  @include phone {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
}

.mobile-nav {
  position: fixed;
  bottom: 25px;
  left: 0;
  right: 0;
  padding: 0 25px;
  z-index: 10;
  display: flex;
  justify-content: space-between;
}

.mobile-nav-button {
  border: 1px solid black;
  padding: 10px;
  border-radius: 25px;
  background: white;
  z-index: 10;
}

// END OF HEADER
// START OF PRODUCT PAGE
.swiper-container-product-page {
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.product-template {
  padding-top: 25px;
  display: grid;
  grid-template-columns: calc((100% - 25px) / 2) calc((100% - 25px) / 2);
  justify-content: space-between;
  margin-bottom: 32px;

  @include phone {
    grid-template-columns: 100%;
  }

  .swiper-button-next::before {
    background: url('{{ "cursor-arrow-right.svg" | asset_url }}') 24px center
      no-repeat;
    content: "";
    opacity: 0.25;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.15s;
    background-position: calc(100% - 30px);
  }
  .swiper-button-prev::after {
    background: url('{{ "cursor-arrow-left.svg" | asset_url }}') 24px center
      no-repeat;
    content: "";
    opacity: 0.25;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    transition: opacity 0.15s;
  }
}

.product-description-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-description {
  width: 50%;
  margin-bottom: 30px;

  @include phone {
    width: 100%;
  }
}

.product-title {
  margin-bottom: 100px;
  font-size: 24px;
  text-transform: uppercase;
}

.product-option-row {
  position: relative;
  user-select: none;
}

.product-option-label::before,
.add-to-cart-button::before {
  content: "";
  width: 11px;
  height: 11px;
  position: absolute;
  right: 25px;
  top: 50%;
  transform: translateY(-50%);
  background: currentColor;
  border-radius: 50%;
}

.product-option-label,
.add-to-cart-button {
  padding: 25px;
  position: relative;
  border: solid;
  cursor: pointer;
  border-color: black;
  border-width: 1px 1px 0;
  border-right-color: transparent;
  border-left-color: transparent;
  font-size: 16px;
  width: 100%;
  text-align: left;
  text-transform: uppercase;
}

.add-to-cart-button {
  text-transform: uppercase;
  background-color: black;
  color: white;

  &:hover {
    background-color: #ededed;
    color: black;
  }
}

.product-option-label:hover {
  background: #ededed;
}

.product-option-list {
  position: absolute;
  bottom: 70px;
  right: 0;
  left: 0;
  background-color: white;
  border: solid 1px black;
}

.product-option-item {
  padding: 25px;
  cursor: pointer;
  &:nth-child(n + 2) {
    box-shadow: inset 0 1px #9a9a9a;
  }
  &:hover {
    background: #ededed;
  }
}
// END OF PRODUCT PAGE
// START OF COLLECTION PAGE
.collection-list {
  flex-wrap: wrap;
}

.collection-title {
  padding: 32px 0;
  font-size: 24px;
  text-align: center;
  line-height: 1.2;
}

// END OF COLLECTION PAGE
// START OF PRODUCT CARD
.product-card {
  width: calc((100% - 25px * 2) / 3);
  margin-bottom: 32px;
  height: 100%;
  @include phone {
    width: 100%;
  }
}

.product-image-wrapper {
  padding-top: 120%;
  display: block;
  overflow: hidden;
  position: relative;
  margin-bottom: 20px;
}

.swiper-container {
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.swiper-slide {
  display: flex;
  justify-content: start;
  align-items: center;
  position: relative;
  user-select: none;
  img {
    height: 100%;
    width: 100%;
    outline-style: none;
    box-shadow: none;
    border-color: transparent;
    object-fit: cover;
  }
}

.swiper-button-prev {
  cursor: url('{{ "cursor-arrow-left.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-next {
  cursor: url('{{ "cursor-arrow-right.svg" | asset_url }}') 15 8, auto;
}

.swiper-button-prev,
.swiper-button-next {
  position: absolute;
  top: 0;
  width: 25%;
  height: 100%;
  margin-top: 0;
  outline-style: none;
  box-shadow: none;
  border-color: transparent;
  &::after {
    content: none;
  }

  @include phone {
    display: none;
  }
}

.product-card-title {
  position: relative;
  margin: 16px 0;

  h3 {
    padding-right: 20px;
  }

  .add-button {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 0;
    right: 0;
    border-radius: 50%;

    &::before {
      content: "";
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      border: 1px solid black;
      border-radius: inherit;
    }

    .plus {
      &::before,
      &::after {
        content: "";
        width: 8px;
        height: 2px;
        position: absolute;
        top: 9px;
        left: 6px;
        background: currentColor;
      }

      &::before {
        transform: rotate(90deg);
      }
    }
  }
}

.product-card-title:hover .add-button {
  color: white;
  background-color: black;
}

.product-card-sizes {
  display: none;
}

.product-card-title:hover .product-card-price {
  display: none;
}

.product-card-title:hover .product-card-sizes {
  display: block;
}

// END OF PRODUCT CARD
// START OF MENU DRAWER
.menu-drawer {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  height: 100vh;
  width: 100%;
  z-index: 99;
  max-width: 300px;
  background-color: white;
  padding: 75px 25px 25px 25px;
  transition: transform 0.9s cubic-bezier(0.165, 0.84, 0.44, 1), left 0.5s 0s;
  @include phone {
    position: fixed;
    width: calc(100vw - 50px);
  }

  &::before {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    -webkit-box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    -moz-box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    transition-property: opacity;
    z-index: -1;
  }
}

.menu-drawer.hidden {
  transform: translateX(-100%);
}

.menu-drawer.hidden::before {
  opacity: 0;
}

.menu-drawer-inner {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.menu-button {
  position: relative;
  cursor: pointer;
  transition: 0.15s;
  z-index: 99999;
  &:hover {
    padding-left: 15px;
  }
}

.menu-button:hover .menu-arrow-icon {
  opacity: 1;
  left: 0;
}

.menu-arrow-icon {
  transform: rotate(180deg);
  opacity: 0;
  width: 11.5px;
  height: 12px;
  position: absolute;
  top: 5px;
  left: -15px;
  transition: 0.15s;
  pointer-events: none;
}

// END OF MENU DRAWER
// START OF MINI CART
.mini-cart.hidden {
  transform: translateX(100%);

  .mini-cart-close-button {
    opacity: 0;
    transition: none;
  }
}

.mini-cart-close-button {
  position: absolute;
  top: 25px;
  left: 25px;
  right: auto;
  color: inherit;
  transition: opacity 0.5s 0.1s, padding 0.15s;
}

.mini-cart.hidden::before {
  opacity: 0;
}

.mini-cart {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100vh;
  width: 100%;
  z-index: 99;
  max-width: 350px;
  background-color: white;
  padding: 75px 25px 25px 25px;
  transition-property: transform;

  &::before {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    -webkit-box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    -moz-box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    transition-property: opacity;
    z-index: -1;
  }

  @include phone {
    position: fixed;
    width: calc(100vw - 50px);
    height: 100%;
  }
}

.mini-cart,
.mini-cart::before {
  transition-duration: 1s;
  transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1);
}

.cart-form {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart-button {
  cursor: pointer;
  position: relative;
  transition: 0.15s;
  z-index: 999;

  &:hover {
    padding-right: 15px;
  }
}

.cart-button:hover .cart-arrow-icon {
  opacity: 1;
  right: 0;
}

.cart-arrow-icon {
  opacity: 0;
  width: 11.5px;
  height: 12px;
  position: absolute;
  top: 5px;
  right: -15px;
  transition: 0.15s;
  pointer-events: none;
}

.mini-cart-image-wrapper {
  width: 140px;
  margin-right: 25px;
  img {
    width: 100%;
  }
}

.mini-cart-rows {
  border-top: 1px solid black;
  border-bottom: 1px solid black;
  height: 100%;
  overflow: auto;
}

.mini-cart-item {
  display: flex;
  padding: 25px 0;
}

.mini-cart-item-right {
  flex: 1;
}

.mini-cart-quantity {
  position: relative;
  height: 25px;
  overflow: hidden;
  margin-top: 10px;
  border: 1px solid;
  border-radius: 15px;
  input {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 25px;
  }
  .mini-cart-quantity-button {
    width: 25px;
    position: absolute;
    top: -4px;
    bottom: 0;
    left: 0;
  }
  .mini-cart-quantity-button:last-of-type {
    left: auto;
    right: 0;
  }
}

.checkout-button {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50px;
  border-radius: 25px;
  padding: 0 25px 1px 0;
  background-color: black;
  color: white;

  &:hover {
    opacity: 0.85;
  }
}

.checkout-subtotal {
  display: flex;
  justify-content: space-between;
  height: 72px;
  padding: 0 25px;
  line-height: 72px;
}

.outside {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.cart-empty {
  text-align: center;
  opacity: 0.2;
  padding-top: 42px;
  font-size: 24px;
  line-height: 1.5;
}

// END OF MINI CART
// START OF HERO SECTION
.hero-image {
  margin-bottom: 40px;
  @include phone {
    height: 270px;
    img {
      height: 100%;
      object-fit: cover;
    }
    .navigation-menu,
    h3 {
      display: none !important;
    }
  }
  h3 {
    padding-bottom: 100px;
  }
  .navigation-menu,
  h3 {
    position: absolute;
    width: calc(100% - 25px);
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    z-index: 9;
    li:not(:last-child) {
      margin-right: 10px;
    }
  }
  img {
    position: relative;
    z-index: 1;
    height: 100vh;
    width: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
}

// END OF HERO SECTION
// START OF LOGO LINK
.logo-container {
  display: flex;
  justify-content: space-between;
  padding-top: 50px;
}

.logo-link {
  max-width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  img {
    width: 50%;
  }
}

// END OF LOGO LINK
// START OF IMAGE WITH TEXT SECTION
.image-with-text {
  display: grid;
  grid-template-columns: 1fr 1fr;

  @include phone {
    grid-template-columns: 1fr;
  }
}
.image-with-text.reverse {
  direction: rtl;
}

.image-with-text-description-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 25px;
  direction: ltr;
}

.image-with-text-body {
  width: 75%;
  margin: 0 auto;
  padding-top: 50px;
}

// END OF IMAGE WITH TEXT SECTION
// START OF FOOTER
.footer-inner {
  padding: 25px 0 40px 0;
  border-top: 1px solid black;
  justify-content: space-around;
  @include phone {
    display: block;
    text-align: center;
    .footer-menu {
      margin: 10px 0;
    }
  }
}

.social-links {
  li {
    font-size: 25px;
    padding: 0 10px;
  }
}

@media (hover: hover) and (pointer: fine) {
  .footer-menu a {
    transition: color 0.5s;
  }
  .footer-menu ul:hover a {
    color: #9a9a9a;
  }
  .footer-menu li a:hover {
    color: black;
  }
}

// END OF FOOTER

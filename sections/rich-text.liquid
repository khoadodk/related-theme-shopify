<div class="rich-text section">
  <h2 class="text-center heading">
    {{ section.settings.title }}
  </h2>
  <div class="text-center padding-top">
    {{ section.settings.description }}
  </div>
</div>

{% schema %}
{
    "name": "Rich Text",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default":"Section Heading"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default":"<p>Write your description here.</p>"
        } 
    ],
    "presets": [
        {
            "name":"Rich Text",
            "category": "Text"
        }
    ]
}
{% endschema %} 